<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pucsd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Programmes"
                    android:id="@+id/textView4"
                    android:textColor="#945d5d"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="MCA 3-years"
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#0000ff"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="The MCA degree primarily aims at training for professional practice in the industry. The programme is designed so that the graduate can adapt to any specific need with ease. The duration of the study is six semesters, which is normally completed in three years."
                    android:id="@+id/textView6"
                    android:layout_margin="10dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="MSC 2-years"
                    android:id="@+id/textView7"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#0000ff"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="The MSc degree prepares the student for higher studies in Computer Science. The duration of the study is four semesters, which is normally completed in two years. An year long project provides an opportunity to apply the principles to a significant problem."
                    android:id="@+id/textView8"
                    android:layout_margin="10dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="MTECH 2-years"
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#0000ff"
                    android:layout_margin="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="The MTech degree is a first level degree in Computer Science for graduates in any engineering discipline except Computer Science. This programme also primarily aims at training for professional practice in the industry. The programme is designed so that the graduate can adapt to any specific need with ease. The duration of the study is four semesters, which is normally completed in two years. An year long project provides an opportunity to apply the principles to a significant problem."
                    android:id="@+id/textView10"
                    android:layout_margin="10dp"
                    android:textSize="18dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>